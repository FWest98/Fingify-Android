<?xml version="1.0" encoding="utf-8"?>
<resources>
    <color name="dialog_textColor">#000</color>
    <color name="colorPrimary">#607D8B</color>
    <color name="colorPrimaryDark">#455A64</color>
    <color name="colorPrimaryLight">#CFD8DC</color>
    <!--<color name="colorAccent">#FFC400</color>
    <color name="colorAccentDark">#FFAB00</color>
    <color name="colorAccentLight">#FFE57F</color>-->
    <color name="colorAccent">#AFB42B</color>
    <color name="colorAccentDark">#9E9D24</color>
    <color name="colorAccentLight">#DCE775</color>
    <color name="windowBackground">#EDEDED</color>

    <!-- Base app theme -->

    <style name="AppTheme" parent="MaterialDrawerTheme.Light.DarkToolbar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/windowBackground</item>
        <item name="toolbarNavigationButtonStyle">@style/ToolbarNavigationButtonStyle</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <!-- Preference Theme -->
    <style name="PreferenceTheme" parent="AppTheme">
        <item name="actionBarTheme">@style/PreferenceActionBar</item>
    </style>

    <style name="PreferenceActionBar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">@color/colorPrimaryLight</item>
    </style>

    <!-- Custom items -->
    <style name="ToolbarNavigationButtonStyle" parent="Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="android:minWidth">72dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>

    <style name="TextAppearance.AppCompat.Subheading" parent="TextAppearance.AppCompat.Body2">
        <item name="android:textColor">@android:color/tertiary_text_light</item>
    </style>

    <!-- DialogActivities -->
    <style name="DialogAcitivity" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowSoftInputMode">stateAlwaysHidden</item>
        <item name="android:windowActionModeOverlay">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="PopupActivity" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="toolbarNavigationButtonStyle">@style/ToolbarNavigationButtonStyle</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="AlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">

    </style>
</resources>
